@model IEnumerable<App.Models.Organization>

@{
    ViewBag.Title = "Index";
}

<h2>Organizations</h2>

<!--<p>
    @Html.ActionLink("Create New", "Create")
</p>-->
<table class="table table-bordered border-primary">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OrganizationName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Info)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Organizer)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrganizationName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Info)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Organizer)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.OrganizationId }) |
                @Html.ActionLink("Details", "Details", new { id = item.OrganizationId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.OrganizationId })
            </td>
        </tr>
    }

</table>
<br />
<button class="btn" style="background-color: blueviolet">
    @Html.ActionLink("Create New", "Create", null, null, new { style = "color: White" })
</button>